        <include refid="Base_Column_List" />
        from SHORT_WORD T
        <where>
            <if test="word != null" >
                AND WORD =#{word ,jdbcType=VARCHAR }
            </if>
            <if test="info != null" >
                AND INFO =#{info ,jdbcType=VARCHAR }
            </if>
            <if test="id != null" >
                AND ID =#{id ,jdbcType=VARCHAR }
            </if>
            <if test="createDate != null" >
