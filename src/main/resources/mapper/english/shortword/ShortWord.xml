            </if>
            
        </where>
    </select>

    <select id="findById" resultMap="BaseResultMap" parameterType="xyz.tobebetter.entity.english.shortword.ShortWord" >
        select
        <include refid="Base_Column_List" />
        from SHORT_WORD T
