        <!--UPDATE USER SET NAME =#{name} ,EMAIL=#{email},PASSWORD=#{password},CREATEDATE=#{createDate},UPDATEDATE=#{updateDate} where ID=#{id}-->
    <!--</update>-->

</mapper>