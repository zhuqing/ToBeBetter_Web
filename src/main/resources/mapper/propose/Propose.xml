    <delete id="delete" parameterType="java.lang.String"  >
        DELETE from PROPOSE where ID = #{id}
    </delete>
    <insert id="create" useGeneratedKeys="true" keyProperty="id" parameterType="xyz.tobebetter.entity.Propose">
        INSERT INTO PROPOSE 
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                ID,
            </if>
            
            <if test="status != null" >
                STATUS,
            </if>
            <if test="createDate != null" >
                CREATE_DATE,
            </if>
            <if test="updateDate != null" >
                UPDATE_DATE,
            </if>
            <if test="connect != null" >
                CONNECT,
            </if>
            <if test="message != null" >
                MESSAGE,
            </if>
         
        </trim>
        
         <trim prefix="values(" suffix=")" suffixOverrides="," >
            <if test="id != null" >
                #{id,jdbcType=VARCHAR},
            </if>
            
            <if test="status != null" >
                #{status,jdbcType=INTEGER},
            </if>
            <if test="createDate != null" >
                #{createDate,jdbcType=INTEGER},
            </if>
            <if test="updateDate != null" >
                #{updateDate,jdbcType=INTEGER},
            </if>
            <if test="connect != null" >
                #{connect,jdbcType=VARCHAR},
            </if>
            <if test="message != null" >
                #{message,jdbcType=VARCHAR},
            </if>
           
        </trim>
    </insert>
     <update id="update" useGeneratedKeys="true" keyProperty="id" parameterType="xyz.tobebetter.entity.Propose">
        update PROPOSE
        <set>
             <if test="status != null" >
                STATUS = #{status,jdbcType=INTEGER},
            </if>
            <if test="createDate != null" >
                CREATE_DATE =#{createDate,jdbcType=INTEGER},
            </if>
            <if test="updateDate != null" >
                UPDATE_DATE = #{updateDate,jdbcType=INTEGER},
            </if>
          
            <if test="connect != null" >
                CONNECT = #{connect,jdbcType=VARCHAR},
            </if>
            <if test="message != null" >
                MESSAGE = #{message ,jdbcType=VARCHAR},
            </if>
          
        </set>
        
         where ID = #{id,jdbcType=DECIMAL}
    </update>

</mapper>