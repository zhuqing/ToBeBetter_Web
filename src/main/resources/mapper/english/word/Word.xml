            </if>
            <if test="anAudionPath != null" >
                AN_AUDION_PATH ,
            </if>
            <if test="id != null" >
                ID ,
            </if>
            <if test="createDate != null" >
                CREATE_DATE ,
            </if>
            <if test="updateDate != null" >
                UPDATE_DATE ,
            </if>
            <if test="status != null" >
                STATUS ,
            </if>
           
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="word != null" >
                #{word ,jdbcType=VARCHAR },
            </if>
            <if test="detail != null" >
                #{detail ,jdbcType=VARCHAR },
            </if>
            <if test="enAudioPath != null" >
