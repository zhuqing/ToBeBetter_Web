        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="word != null" >
                #{word ,jdbcType=VARCHAR },
            </if>
            <if test="info != null" >
                #{info ,jdbcType=VARCHAR },
            </if>
            <if test="id != null" >
